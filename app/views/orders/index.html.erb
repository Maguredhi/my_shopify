<section class="section">
  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th><%= t('order.date') %></th>
      <th><%= t('order.order_number') %></th>
      <th><%= t('order.order_price') %></th>
      <th><%= t('order.status') %></th>
      <th><%= t('order.feature') %></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.num %></td>
        <td><%= order.total_price %></td>
        <td><%= order.state %></td>
        <td>
          <%= link_to '詳細', order_path(order), class: 'button is-info is-small', data: { turbolinks: false } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
