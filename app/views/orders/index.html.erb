<section class="section">
  <% if @orders.present? %>
    <div class="table-container">
      <table class="table is-fullwidth">
        <thead>
        <tr>
          <th><%= t('order.date') %></th>
          <th><%= t('order.order_number') %></th>
          <th><%= t('order.order_price') %></th>
          <th><%= t('order.state') %></th>
          <th><%= t('order.feature') %></th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= local_datetime(order.created_at) %></td>
            <td><%= order.num %></td>
            <td>
              <span class="px-1"><%= order.total_price %></span>
            </td>
            <td><%= state_format(order.state) %></td>
            <td>
              <%= link_to t('button.detail'), order_path(order), class: 'button is-info is-light is-small', data: { turbolinks: false } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="mt-4">
      <%== pagy_bulma_nav(@pagy) %>
    </div>
  <% else %>
    <div class="table-container">
      <table class="table is-fullwidth">
        <thead>
        <tr>
          <th><%= t('order.date') %></th>
          <th><%= t('order.order_number') %></th>
          <th><%= t('order.order_price') %></th>
          <th><%= t('order.state') %></th>
          <th><%= t('order.feature') %></th>
        </tr>
        </thead>
      </table>
    </div>
    <p class="title has-text-centered py-4"><%= t('order.no_order') %></p>
  <% end %>
</section>
