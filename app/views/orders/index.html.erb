<section class="section">
  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th><%= t('order.date') %></th>
      <th><%= t('order.order_number') %></th>
      <th><%= t('order.order_price') %></th>
      <th><%= t('order.status') %></th>
      <th><%= t('order.feature') %></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.num %></td>
        <td><%= order.total_price %></td>
        <td><%= order.state %></td>
        <td>
          <%= link_to t('button.pay'), pay_order_path(order), method: 'post', data: {confirm: "確認付款？"}, class: 'button is-primary is-small' if order.may_pay? %>
          <%= link_to t('button.cancel'), cancel_order_path(order), method: 'delete', data: {confirm: "確認取消訂單？\n如果訂單已付款將會進行退費"}, class: 'button is-danger is-small' if order.may_cancel? %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
