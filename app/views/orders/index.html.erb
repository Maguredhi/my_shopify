<section class="section">
  <table class="table is-fullwidth">
    <thead>
    <tr>
      <th><%= t('order.date') %></th>
      <th><%= t('order.order_number') %></th>
      <th><%= t('order.order_price') %></th>
      <th><%= t('order.state') %></th>
      <th><%= t('order.feature') %></th>
    </tr>
    </thead>

    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= local_datetime(order.created_at) %></td>
        <td><%= order.num %></td>
        <td><%= order.total_price %></td>
        <td><%= state_format(order.state) %></td>
        <td>
          <%= link_to t('button.detail'), order_path(order), class: 'button is-info is-small', data: { turbolinks: false } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div>
    <%== pagy_bulma_nav(@pagy) %>
  </div>
</section>
