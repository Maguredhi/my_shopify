<h1 class="title"><%= t('admin.product.list') %></h1>

<%= link_to t('admin.button.add_product'), new_admin_product_path, class: 'button is-primary is-small' %>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th><%= t('admin.product.name') %></th>
      <th><%= t('admin.vendor.name') %></th>
      <th><%= t('admin.product.list_price') %> / <%= t('admin.product.sell_price') %></th>
      <th><%= t('admin.product.on_sell') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|  %>
      <tr>
        <td><%= link_to "#{product.name} [#{t('admin.product.code')}ï¼š#{product.code}]", edit_admin_product_path(product) %></td>
        <td><%= product.vendor.title %></td>
        <td><%= product.list_price %> / <%= product.sell_price %></td>
        <td><%= product.on_sell %></td>
        <td>
          <%= link_to t('admin.button.edit'), edit_admin_product_path(product), class: 'button is-light is-small' %>
          <%= link_to t('admin.button.delete'), admin_product_path(product), method: 'delete', data: { confirm: t('admin.vendor.delete_confirm') }, class: 'button is-danger is-small' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>