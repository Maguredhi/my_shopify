<section class="section">
  <h1 class="title"><%= t('cart.checkout') %></h1>
  <%= render 'cart' %>

  <hr>
  <h2 class="title is-5"><%= t('cart.payment') %></h2>
  <div class="columns">
    <%= link_to checkout_cart_path(type: 'linepay') do %>
      <div class="column is-2 is-offset-4">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_pack_tag 'linepay_logo.png' %>
            </figure>
          </div>
          <div class="card-content">
            <%= link_to t('button.linepay'), checkout_cart_path(type: 'linepay'), class: 'button line-button is-fullwidth' %>
          </div>
        </div>      
      </div>
    <% end %>

    <%= link_to checkout_cart_path(type: 'paypal') do %>
      <div class="column is-2">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_pack_tag 'paypal_logo.png' %>
            </figure>
          </div>
          <div class="card-content">
            <%= link_to t('button.paypal'), checkout_cart_path(type: 'paypal'), class: 'button paypal-button is-fullwidth', data: { turbolinks: false } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>