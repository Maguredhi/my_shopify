<section class="section">
  <p class="title"><%= t('nav_bar.profile') %></p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, t('devise.name'), class: 'label' %>
      <%= f.text_field :name, class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :email, t('devise.email'), class: 'label' %>
      <%= f.email_field :email, class: 'input' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, t('devise.password'), class: 'label' %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('devise.confirmation'), class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :current_password, t('devise.current_password'), class: 'label' %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.update'), class: 'button is-warning mb-4' %>
    </div>
  <% end %>

  <% button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <% link_to "Back", :back %>
</section>