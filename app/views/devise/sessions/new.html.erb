<section class="container">
  <div class="columns">
    <div class="column is-9">
      <%= image_pack_tag 'cats/cat-login.jpeg' %>
    </div>
    <div class="column is-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, t('devise.email'), class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :password, t('devise.password'), class: 'label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, t('devise.remember_me') %>
          </div>
        <% end %>

        <div class="actions flex">
          <%= f.submit t('button.log_in'), class: 'button is-primary mr-2' %>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to  omniauth_authorize_path(resource_name, provider), method: :post do %>
                <div class="google-btn">
                  <div class="google-icon-wrapper">
                    <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
                  </div>
                  <p class="btn-text"><b>Sign in with google</b></p>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>