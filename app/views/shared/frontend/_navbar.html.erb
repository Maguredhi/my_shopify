<nav class="navbar has-shadow" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="" href="/">
      <%= image_pack_tag 'shopify_logo.png', size: '160', style: 'margin-left: 10px; margin-top: 4px;' %>
    </a>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start hidden">
      <div class="navbar-item field has-addons">
        <div class="control">
          <input class="input" type="text" placeholder="<%= t('nav_bar.keyword') %>">
        </div>
        <div class="control">
          <a class="button is-primary">
            <i class="fas fa-search"></i>&nbsp; <%= t('nav_bar.search') %>
          </a>
        </div>
      </div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if user_signed_in? %>
            <div class="nvabar-item" data-controller="cart">
              <%= link_to cart_path do %>
                <i class="fas fa-shopping-cart"></i>
                <span data-cart-target="count" data-action="addToCart@document->cart#updateCart">
                  (<%= current_cart.items.count %>)
                </span>
              <% end %>
            </div>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                <i class="fas fa-user"></i>&nbsp;<%= current_user.email %>
              </a>
              <div class="navbar-dropdown">
                <%= link_to t('nav_bar.profile'), edit_user_registration_path, class: 'navbar-item' %>
                <%= link_to t('nav_bar.order_list'), orders_path, class: 'navbar-item' %>
                <hr class="navbar-divider">
                <%= link_to t('log_out'), destroy_user_session_path, method: :delete, class: 'navbar-item' %>
              </div>
            </div>
          <% else %>
            <%= link_to t('button.sign_up'), new_user_registration_path, class: 'button is-primary' %>
            <%= link_to t('button.log_in'), new_user_session_path, class: 'button is-light' %>
          <% end %>
        </div>
      </div>
      <div class="navbar-item lang">
        <% if I18n.locale.to_s == "ja"%>
          <%= link_to locale: "zh-TW", class: 'is-small' do %>
            <i class="fas fa-sync-alt"></i>
            繁中
          <% end %>
        <% else %>
          <%= link_to locale: "ja", class: 'is-small' do %>
            <i class="fas fa-sync-alt"></i>
            日本語
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
