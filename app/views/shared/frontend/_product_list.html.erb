<section class="product_list section">
  <section class="container">
    <div class="columns is-multiline box">
      <% products.each do |product| %>
        <div class="column is-4">
          <div class="card product-item is-shadowless mb-4">

            <%= link_to product do %>
              <div class="card-image">
                <figure class="image">
                    <%= image_tag product.cover_image.variant(resize: '430x290') if product.cover_image.attached? %>
                </figure>
              </div>
              <div class="message is-dark">
                <div class="message-body">
                  <h4 class="is-size-6"><%= t('product.store_name') %>ï¼š<%= product.vendor.title %></h4>
                  <p class="has-text-dark is-size-5"><%= product.name %></p>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>
  </section>
</section>
